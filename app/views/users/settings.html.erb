<div class="main">

	<h4 class="custom-h5">Settings</h4>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4">
				<% if current_user == @user %>
					<%= link_to button_tag("Edit", class: "btn btn-success btn-block"),edit_user_path(@user) %>
					<%= link_to button_tag("Delete", class: "btn btn-danger btn-block"),user_path(@user), method: :delete, data: {confirm: 'Are you sure?'} %>
				<% end %>
			</div>
		</div>
	</div>

</div>