<div class="main">
	<% if @conversation.errors.any? %>
		<%= render 'conversations/error_explain' %>
	<% end %>
	<h4 class="custom-h4"> Create a New Stream </h4>
	<%= form_for :conversation, url: conversations_path do |f| %>
		<div class="form-group">
			<%= f.text_field :title, class: "form-control", placeholder: "Title" %>
		</div>
		<div class="form-group">
			<%= f.text_area :description, class: "form-control", placeholder: "Description of your Stream" %>
		</div>
		<%= f.submit "Create", type: "submit", class: "btn btn-primary" %>
	<% end %>
</div>