<div class=new-post>
	<div class="modal fade_in" id="new-post" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
					<h4 class="modal-title" id="myModalLabel">Create a Post</h4>
				</div>
				<div class="modal-body">
					<%= form_for([@conversation, @conversation.posts.build]) do |f| %>
						<div class="form-group">
							<%= f.text_field :title, class: "form-control", placeholder: "Title" %>
						</div>
						<div class="form-group">
							<%= f.text_area :content, class: "form-control", placeholder: "Content" %>
						</div>
						<%= f.submit "Post", type: "submit", class: "btn btn-custom" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>