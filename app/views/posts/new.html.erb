<div class="new-post">
	<% if @post.errors.any? %>
		<%= render 'posts/error_explain' %>
	<% end %>
	<div class="top-nav">
		<small><%= link_to content_tag(:span,"", class: "glyphicon glyphicon-chevron-left"), conversation_path(@conversation), class: "pull-left" %></small>
	</div>
	<div class="container">
		<h4 class="custom-h4">Create a Post</h4>
		<%= form_for([@conversation, @conversation.posts.build]) do |f| %>
			<div class="form-group">
				<%= f.text_field :title, class: "form-control", placeholder: "Title" %>
			</div>
			<div class="form-group">
				<%= f.text_area :content, class: "form-control", placeholder: "Content" %>
			</div>
			<%= f.submit "Post", type: "submit", class: "btn btn-custom" %>
		<% end %>
	</div>
</div>